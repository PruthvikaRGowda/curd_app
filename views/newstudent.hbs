<body>
    <!----------header-------->
    <header id="header">
        <nav>
            <div class="container">
                <div class="text-center">
                    <a herf="/" class="nav-brand text-dark"> ADD STUDENT </a>
                </div>
            </div>
        </nav>
    </header>
    <!---------header------->

    <!--------main site-->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="addstudent"><i class="fas fa-angle-double-left">All Student</i></a>
                
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Add New Student</h2>
            <span class="text-light">Use the form to create a new account</span>
        </div>

    <!--------form handling--------->
    <form action="/api/E-learning" method="POST" id="add_user" >
        <div class="new_user">
            <div class="form_group ">
                <label for="name" class="text-light">Name</label>
                <input type="hidden" name="id" value="">
                <input type="text" name="name" value="" placeholder="mark Stoens" required>
                
            </div>
            <div class="form_group">
                <label for="USN" class="text-light">USN</label>
                <input type="text" name="usn" value="" placeholder="Eg:4GL19CS21" required>
                
            </div>
            <div class="form_group">
                <label for="Course" class="text-light">Course</label>
                <input type="text" name="course" value="" placeholder="Branch specialization" required>
                
            </div>
            <div class="form_group">
                <label for="Semester" class="text-light">Semester</label>
                <input type="text" name="sem" value="" placeholder="1" required>
                
            </div>
            <div class="form_group">
                <label for="Email" class="text-light">email</label>
                <input type="text" name="email" value="" placeholder="example@gmail.com" required>
                
            </div>
            <div class="form_group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
        </div>
    </form>
        </div>

    </main>
